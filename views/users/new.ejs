<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Create an Account</title>
  </head>
  <body>
    <%- include ('../partials/nav.ejs') %>
    <div class="back-button-divider">
        <a href="/"><button class="btn btn-secondary back-button" >BACK</button></a>
        </div>
    <div class="container-fluid main-container">
        <h1>Create an Account</h1>
        <form class="form-group create-account" action="/users/newUser" method="POST">
            <input class="form-control" type="text"  name="username" maxlength="15" placeholder="Username" /><br/>
            <input class="form-control" type="text" name="password" placeholder="Password"/><br/>
            <input class="btn btn-primary add-account-button" id="submit" type="submit" value="Create Account"/>
        </form>
    </div>

  </body>
</html>
